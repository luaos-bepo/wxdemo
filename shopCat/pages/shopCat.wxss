/* shopCat/pages/shopCat.wxss */
page{
  height: 100%;
}


.shop-container{
  background-color:rgb(240,240,240);
  width: 100%;
  height: 100vh;
  padding-top: 28rpx;
}

.shop-card{
  background-color: white;
  border-radius: 5px;
  width: 90%;
  margin: auto;
  margin-top: 28rpx;
  padding-top: 20rpx;
  
}

.shop-list{

  margin-top: 20rpx;
  width: 100%;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
}


.shop-img{
  width:120px;
  height: 70px;
  
  border-radius: 3px;
}

.shopinfor-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10px;
  
}

.shopinfor-font{
  font-weight: bold;
  font-size:14px ;
  
}

.shopinfor-nowprice{
  font-size: 14px;
  font-weight: bold;
  color: red;
}

.shop-left{
  width: 80%;
  display: flex;
  flex-direction: row;
  background-color: rgb(240, 240, 240);
  padding:10px;
  border-radius: 10px;
  
}

.checkbox1{
  margin:auto;
  margin-left: 5px;
  margin-right: 15px;

}

.checkbox1-font{
  font-size: 16px;
  font-weight: bold;
}

.shop-num{
  font-weight: lighter;
  font-size: 10px;
}



.shopinfor-oldprice{
  font-weight: normal;
  font-size: 12px;
  color: gray;
  text-decoration: line-through;
  margin-left: 10px;
}

.shop-post{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5px 15px 5px 0px;
}

.post-button{
  margin-left: 10px;
}

