/* shopping/pages/shopping.wxss */
.shopping-contain{
  margin: 0px;
  padding: 0px;
}

.top-img{
  height: 250px;
  width: 100%;
}

.contain{
  margin-right: 10px;
  margin-left: 10px;
}

.tag{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.tag-font{
  margin-right: 2px;
}

.time-font{
  font-size: 2px;
}

.now-price{
  font-size: 14px;
  font-weight: bold;
  color: red;
  
}

.old-price{
  font-weight: bold;
  font-size: 12px;
  color: gray;
  text-decoration: line-through;
  margin-left: 15px;
}

.jieshao{
  font-size: 15px;
  font-weight: lighter;
  margin-right: 25px;
}

.mingcheng{
  font-size: 15px;
  font-weight: normal;
}

.num{
  color: red;
}

.user{
  font-size: 15px;
  margin-right: 5px;
}

.pj{
  font: 15px;
  margin-right: 20px;
  text-align: center;
}

.pj-img{
  width: 50px;
  height: 50px;
}

.pj-list{
  display: flex;
  flex-direction: row;
  justify-content: start;
}

.js-contain{
  display: flex;
  flex-direction: row;
  justify-content: start;
  height: 70px;
}

.jieshao1{
  font-size: 15px;
  font-weight: lighter;
  margin-right: 25px;
  line-height: 70px;
}

.num-font{
  font-size: 15px;
  font-weight: lighter;
}

.buttom{
  width: 100%;
  position: fixed;
  bottom: 0px;
  left: 0px;
}

.icon-gift{
  display: block;
}

.placeholder-view {
  width: 100%;
  height: 150rpx;
}

.xuanfu-icon{
  position: fixed;
  bottom: 60px;
  right: 10px;
  width: 42px;
  height: 42px;
}



